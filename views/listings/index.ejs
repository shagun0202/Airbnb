<% layout("layouts/boilerplate") %>
<body>
    <h3> All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
         <button> Create New Listing</button>
    </form> -->

  <div class="row row-cols-lg-3 row-cols-md-3  row-cols-sm-1">
   <% for (let listing of allListings) { %>
    <div class="col mb-4">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class=" card col listing-card ">
          <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://via.placeholder.com/150' %>" class="card-img-top" alt="listing_image" style="height : 20rem"/>
         <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <%= listing.title %> <br> &#8377;
              <%= listing.price ? listing.price.toLocaleString("en-In") : "N/A" %> /night
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>
</body>



